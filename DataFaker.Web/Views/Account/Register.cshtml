@{
    ViewBag.Title = "Registrar-se";
    Layout = "_LayoutNotLogged";
}
@section Scripts {
    <script src="~/js/Account/register.js"></script>
}

<div class="container">
    <div class="d-flex w-100 min-vh-100 justify-content-center align-items-center">
        <div class="card rounded shadow">
            <div class="card-body py-4 px-5">
                <form id="login-form">
                    <div class="d-flex flex-column">
                        <span class="fw-bold align-self-center">AUTO-CADASTRO</span>
                        <div class="form-group mt-3">
                            <label for="nome">Nome</label>
                            <input type="text" name="Nome" class="form-control" id="nome" placeholder="Inserir Nome" required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="email">Email</label>
                            <input type="email" name="Email" class="form-control" id="email" placeholder="Inserir E-mail" required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="senha">Senha</label>
                            <input type="password" name="Senha" class="form-control" id="senha" placeholder="*********" required>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Entrar</button>
                        <small>
                            <a href="@Url.Action("Login","Account")">Já possuo uma conta</a>
                        </small>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>